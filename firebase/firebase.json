{
  "database": {
    "rules": "database.rules.json",
    "predeploy": [
      "./seed-rooms.sh"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "rm -rf dist",
      "cp -r ../dist ."
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "database": {
      "port": "5003"
    },
    "hosting": {
      "port": "5004"
    }
  }
}
